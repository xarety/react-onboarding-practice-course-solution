{
    "extends": ["tslint-config-airbnb", "tslint-react", "@servicetitan/tslint-yield", "tslint-react-hooks"],
    "rules": {
        "indent": [true, "spaces", 4],
        "yield": true,
        "ter-indent": [true, 4, {"SwitchCase": true}],
        "trailing-comma": [false, {"multiline": "never", "singleline": "never"}],
        "import-name": false,
        "quotemark": [true, "single", "jsx-double"],
        "max-line-length": [false],
        "ter-max-len": [
            true,
            150,
            {
                "tabWidth": 4,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreComments": true
            }
        ],
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
        "no-else-after-return": ["error", { "allowElseIf": true }],
        "curly": true,
        "no-default-export": true,
        "jsx-no-multiline-js": false,
        "jsx-boolean-value": false,
        "jsx-no-lambda": true,
        "jsx-space-before-trailing-slash": true,
        "member-access": [true, "no-public"]
    }
}
